---
import Layout from "../layouts/Layout.astro";
import DeckList from "../components/DeckList.tsx";
---

<Layout>
    <main class="container mx-auto px-4 py-8 max-w-5xl">
        <div class="space-y-8">
            <div class="border-b pb-6">
                <h1 class="text-4xl font-bold mb-2">Profile</h1>
                <p class="text-muted-foreground text-lg">Manage your flashcard decks and learning progress</p>
            </div>

            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-semibold">Your Decks</h2>
                    <a href="/create-deck" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2">
                        + Create Deck
                    </a>
                </div>
                <DeckList client:load />
            </div>
        </div>
    </main>
</Layout>
