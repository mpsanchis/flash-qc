---
import Layout from "../layouts/Layout.astro";
import styles from "../styles/Landing.module.css";
import { Button } from "@/components/ui/button";
---

<Layout>
    <div class="flex flex-col items-center justify-center min-h-[80vh] px-8">
        <section class="text-center max-w-2xl">
            <h2 class="text-5xl font-bold mb-4">Welcome to Flash QC</h2>
            <h3 class="text-2xl text-muted-foreground mb-8">
                Learn at Lightspeed
            </h3>
            <div class="px-[5%] mb-8">
                <img
                    src="landing.jpg"
                    width="100%"
                    alt="Landing Image"
                    class="rounded-lg shadow-lg"
                />
            </div>
            <div class="flex gap-4 justify-center">
                <Button className="cursor-pointer bg-black text-white" variant="outline" size="lg" >
                  <a href="/login">
                    Login
                  </a>
                </Button>
              <Button className="cursor-pointer" variant="outline" size="lg">
                <a href="/signup">
                    Sign Up
                </a>
              </Button>
            </div>
        </section>
    </div>
</Layout>
